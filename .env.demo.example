# デモ環境用環境変数設定例
# 本ファイルを .env.local にコピーして使用してください

# Supabase設定 (必須)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# デモ機能設定 (オプション)
DEMO_MODE=true
DEMO_SESSION_TIMEOUT=1800000  # 30分 (ミリ秒)
DEMO_MAX_SESSIONS_PER_IP=3
DEMO_RATE_LIMIT_SMS_PER_MINUTE=3
DEMO_RATE_LIMIT_SMS_PER_HOUR=10

# ログ設定 (オプション)
DEMO_LOG_LEVEL=info
DEMO_LOG_RETENTION_DAYS=30

# セキュリティ設定 (オプション)
DEMO_TOKEN_LENGTH=64
DEMO_ENCRYPT_DATA=true
DEMO_AUDIT_TRAIL=true

# 注意事項:
# - 本番環境では DEMO_MODE=false にしてください
# - デモ環境専用のSupabaseプロジェクトを使用することを推奨します
# - 実際の値を設定後、このファイル名を .env.local に変更してください